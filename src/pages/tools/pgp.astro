      output.textContent = result;
      setStatus('Key pair generated successfully!', 'success');
      updateStats();
    }
    
    function encryptMessage() {
      const message = input.value.trim();
      if (!message) {
        setStatus('Please enter a message to encrypt', 'error');
        return;
      }
      
      if (!currentKeyPair) {
