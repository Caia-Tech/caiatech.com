---
import BaseLayout from '../../layouts/BaseLayout.astro';
import DatasetCard from '../../components/DatasetCard.astro';
import type { DatasetInfo } from '../../types/dataset';

// Import the generated dataset data
let datasets: DatasetInfo[] = [];
let error: string | null = null;

try {
  const datasetData = await import('../../data/datasets.json');
  datasets = datasetData.default || [];
} catch (e) {
  console.error('Failed to load datasets:', e);
  error = 'Failed to load dataset information. Please try again later.';
  
  // Fallback to empty array to prevent build failures
  datasets = [];
}

// Sort datasets: New/Popular first, then alphabetically
datasets.sort((a, b) => {
  // Priority badges first
  if (a.badge && !b.badge) return -1;
  if (!a.badge && b.badge) return 1;
  
  // Then by name
  return a.title.localeCompare(b.title);
});

const totalDatasets = datasets.length;
const totalFiles = datasets.reduce((sum, dataset) => sum + dataset.files.length, 0);
---

<BaseLayout 
  title="Datasets - Caia Tech" 
  description="High-quality datasets for AI/ML research and development. Free and open-source datasets curated by Caia Tech."
  canonical="https://caiatech.com/datasets/"
>
  <section class="datasets-page">
    <div class="container">
      <header class="page-header">
        <h1>
          <span class="mono">./</span><span class="accent">datasets</span>
        </h1>
        <p class="subtitle">Open-source datasets for AI/ML research and development</p>
        
        {totalDatasets > 0 && (
          <div class="stats">
            <div class="stat-item">
              <span class="stat-number">{totalDatasets}</span>
              <span class="stat-label">Dataset{totalDatasets !== 1 ? 's' : ''}</span>
            </div>
            <div class="stat-separator">‚Ä¢</div>
            <div class="stat-item">
              <span class="stat-number">{totalFiles}</span>
              <span class="stat-label">File{totalFiles !== 1 ? 's' : ''}</span>
            </div>
            <div class="stat-separator">‚Ä¢</div>
            <div class="stat-item">
              <span class="stat-number">CC0</span>
              <span class="stat-label">License</span>
            </div>
          </div>
        )}
      </header>

      {error && (
        <div class="error-message">
          <div class="error-icon">‚ö†Ô∏è</div>
          <div class="error-content">
            <h3>Dataset Loading Error</h3>
            <p>{error}</p>
            <p>Please check back later or contact us if the problem persists.</p>
          </div>
        </div>
      )}

      {datasets.length > 0 && (
        <div class="datasets-grid">
          {datasets.map(dataset => (
            <DatasetCard dataset={dataset} />
          ))}
          
          <article class="dataset-card coming-soon">
            <div class="coming-soon-content">
              <span class="coming-soon-icon">+</span>
              <h3>More Datasets Coming Soon</h3>
              <p>We're preparing additional high-quality datasets for computer vision, NLP, and reinforcement learning tasks.</p>
            </div>
          </article>
        </div>
      )}

      {datasets.length === 0 && !error && (
        <div class="empty-state">
          <div class="empty-icon">üìä</div>
          <h3>No Datasets Available</h3>
          <p>We're currently preparing our dataset collection. Check back soon!</p>
        </div>
      )}

      <div class="info-section">
        <div class="info-grid">
          <div class="info-card">
            <h3>Open Source</h3>
            <p>All datasets are released under permissive licenses, making them free to use for research and commercial applications.</p>
          </div>
          <div class="info-card">
            <h3>High Quality</h3>
            <p>Each dataset is carefully curated and validated to ensure accuracy, completeness, and practical utility for AI/ML tasks.</p>
          </div>
          <div class="info-card">
            <h3>Multiple Formats</h3>
            <p>Datasets are available in JSON, JSONL, and Parquet formats to support different workflows and tools.</p>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .datasets-page {
    min-height: calc(100vh - 60px);
    padding: 4rem 0;
    background: linear-gradient(135deg, var(--color-bg) 0%, #151516 100%);
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .page-header {
    margin-bottom: 4rem;
    text-align: center;
  }

  .page-header h1 {
    font-size: clamp(2rem, 5vw, 3rem);
    font-weight: 700;
    margin-bottom: 1rem;
  }

  .mono {
    font-family: var(--font-mono);
    color: var(--color-text);
  }

  .accent {
    color: var(--color-accent);
    font-family: var(--font-mono);
  }

  .subtitle {
    color: var(--color-text-secondary);
    font-size: 1.1rem;
    max-width: 600px;
    margin: 0 auto 2rem;
  }

  .stats {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 1rem;
    margin-top: 2rem;
    flex-wrap: wrap;
  }

  .stat-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.25rem;
  }

  .stat-number {
    font-family: var(--font-mono);
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--color-accent);
  }

  .stat-label {
    font-size: 0.85rem;
    color: var(--color-text-secondary);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .stat-separator {
    color: var(--color-border);
    opacity: 0.5;
    font-size: 1.2rem;
  }

  .datasets-grid {
    display: grid;
    gap: 2rem;
    margin-bottom: 4rem;
  }

  .error-message {
    display: flex;
    align-items: flex-start;
    gap: 1rem;
    padding: 2rem;
    background: rgba(239, 68, 68, 0.1);
    border: 1px solid rgba(239, 68, 68, 0.3);
    border-radius: 8px;
    margin-bottom: 2rem;
  }

  .error-icon {
    font-size: 1.5rem;
    flex-shrink: 0;
  }

  .error-content h3 {
    color: var(--color-text);
    margin-bottom: 0.5rem;
  }

  .error-content p {
    color: var(--color-text-secondary);
    margin-bottom: 0.5rem;
  }

  .error-content p:last-child {
    margin-bottom: 0;
  }

  .empty-state {
    text-align: center;
    padding: 4rem 2rem;
    background: rgba(255, 255, 255, 0.01);
    border: 1px dashed var(--color-border);
    border-radius: 12px;
    margin-bottom: 4rem;
  }

  .empty-icon {
    font-size: 3rem;
    margin-bottom: 1rem;
  }

  .empty-state h3 {
    color: var(--color-text);
    font-size: 1.5rem;
    margin-bottom: 1rem;
  }

  .empty-state p {
    color: var(--color-text-secondary);
    max-width: 400px;
    margin: 0 auto;
  }

  .coming-soon {
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 300px;
    background: rgba(255, 255, 255, 0.01);
    border-style: dashed;
  }

  .coming-soon-content {
    text-align: center;
    padding: 2rem;
  }

  .coming-soon-icon {
    font-size: 3rem;
    display: block;
    margin-bottom: 1rem;
    color: var(--color-accent);
  }

  .coming-soon h3 {
    color: var(--color-text);
    font-size: 1.5rem;
    margin-bottom: 1rem;
  }

  .coming-soon p {
    color: var(--color-text-secondary);
    max-width: 400px;
    margin: 0 auto;
  }

  .info-section {
    margin-top: 4rem;
    padding-top: 4rem;
    border-top: 1px solid var(--color-border);
  }

  .info-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
  }

  .info-card {
    padding: 2rem;
    background: rgba(255, 255, 255, 0.02);
    border: 1px solid var(--color-border);
    border-radius: 8px;
    text-align: center;
  }

  .info-card h3 {
    color: var(--color-accent);
    font-size: 1.2rem;
    margin-bottom: 1rem;
  }

  .info-card p {
    color: var(--color-text-secondary);
    line-height: 1.6;
  }

  @media (max-width: 768px) {
    .datasets-page {
      padding: 2rem 0;
    }

    .container {
      padding: 0 1rem;
    }

    .page-header {
      margin-bottom: 2rem;
    }

    .stats {
      flex-direction: column;
      gap: 1rem;
    }

    .stats .stat-separator {
      display: none;
    }

    .datasets-grid {
      margin-bottom: 2rem;
    }

    .info-grid {
      grid-template-columns: 1fr;
    }

    .info-section {
      margin-top: 2rem;
      padding-top: 2rem;
    }
  }
</style>