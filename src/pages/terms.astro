<style>
  .terms-container {
    max-width: 900px;
    margin: 0 auto;
    padding: 2rem;
  }

  /* Hero Section */
  .hero-section {
    margin-bottom: 3rem;
  }

  .terminal-window {
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.3);
  }

  .terminal-header {
    background: linear-gradient(90deg, rgba(42, 42, 43, 1) 0%, rgba(26, 26, 27, 1) 100%);
    padding: 0.75rem 1rem;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    border-bottom: 1px solid var(--color-border);
  }

  .terminal-controls {
    display: flex;
    gap: 0.5rem;
  }

  .control {
    width: 12px;
    height: 12px;
    border-radius: 50%;
  }

  .control.red { background: #ff5f57; }
  .control.yellow { background: #ffbd2e; }
  .control.green { background: #28ca42; }

  .terminal-title {
    font-family: var(--font-mono);
    font-size: 0.8rem;
    color: var(--color-accent);
    margin-left: auto;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .terminal-body {
    padding: 2rem;
  }

  .prompt {
    color: var(--color-accent);
    font-family: var(--font-mono);
    margin-bottom: 1rem;
  }

  .command {
    color: var(--color-text);
  }

  .output h1 {
    font-size: 2.5rem;
    margin: 1rem 0;
  }

  .tagline {
    font-size: 1.2rem;
    color: var(--color-text-secondary);
    margin-bottom: 1rem;
  }

  .last-updated {
    font-family: var(--font-mono);
    font-size: 0.9rem;
    color: var(--color-text-secondary);
  }

  /* Summary Section */
  .summary-content {
    padding: 1rem;
  }

  .summary-content h2 {
    color: var(--color-accent);
    margin-bottom: 1.5rem;
    font-family: var(--font-mono);
  }

  .summary-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1.5rem;
  }

  .summary-item {
    display: flex;
    gap: 1rem;
    padding: 1rem;
    background: rgba(0, 212, 255, 0.05);
    border: 1px solid rgba(0, 212, 255, 0.2);
    border-radius: 8px;
  }

  .summary-item .icon {
    font-size: 2rem;
    flex-shrink: 0;
  }

  .summary-item h3 {
    color: var(--color-text);
    margin-bottom: 0.25rem;
    font-size: 1rem;
  }

  .summary-item p {
    color: var(--color-text-secondary);
    font-size: 0.9rem;
  }

  /* Terms Content */
  .terms-content {
    padding: 1rem;
  }

  .section {
    margin-bottom: 2.5rem;
  }

  .section h2 {
    color: var(--color-accent);
    margin-bottom: 1rem;
    font-family: var(--font-mono);
    font-size: 1.3rem;
  }

  .section p {
    line-height: 1.8;
    margin-bottom: 1rem;
    color: var(--color-text-secondary);
  }

  .section ul {
    list-style: none;
    padding-left: 0;
    margin: 1rem 0;
  }

  .section ul li {
    position: relative;
    padding-left: 1.5rem;
    margin-bottom: 0.5rem;
    color: var(--color-text-secondary);
    line-height: 1.6;
  }

  .section ul li::before {
    content: '‚ñ∏';
    position: absolute;
    left: 0;
    color: var(--color-accent);
  }

  .highlight {
    background: rgba(0, 212, 255, 0.05);
    border-left: 3px solid var(--color-accent);
    padding: 1rem;
    margin: 1rem 0;
    border-radius: 4px;
  }

  .highlight strong {
    color: var(--color-accent);
  }

  .warning-box {
    background: rgba(255, 189, 46, 0.1);
    border: 1px solid rgba(255, 189, 46, 0.3);
    border-radius: 6px;
    padding: 1rem;
    margin: 1rem 0;
  }

  .warning-box strong {
    color: #ffbd2e;
  }

  .contact-info {
    background: rgba(0, 0, 0, 0.3);
    border: 1px solid var(--color-border);
    border-radius: 6px;
    padding: 1rem;
  }

  /* Acceptance Section */
  .acceptance-content {
    padding: 1rem;
    text-align: center;
  }

  .acceptance-content h2 {
    color: var(--color-accent);
    margin-bottom: 1rem;
    font-family: var(--font-mono);
  }

  .acceptance-note {
    background: rgba(40, 202, 66, 0.1);
    border: 1px solid rgba(40, 202, 66, 0.3);
    border-radius: 6px;
    padding: 1rem;
    margin-top: 1.5rem;
  }

  .acceptance-note strong {
    color: #28ca42;
  }

  /* Links */
  a {
    color: var(--color-accent);
    text-decoration: none;
  }

  a:hover {
    text-decoration: underline;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .terms-container {
      padding: 1rem;
    }

    .output h1 {
      font-size: 2rem;
    }

    .summary-grid {
      grid-template-columns: 1fr;
    }

    .section {
      margin-bottom: 2rem;
    }
  }
</style>