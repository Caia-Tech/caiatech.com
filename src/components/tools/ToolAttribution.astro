export interface Props {
  toolName: string;
  version?: string;
}

const { toolName, version = "1.0.0" } = Astro.props;
const currentYear = new Date().getFullYear();

// Create safe URL slug from tool name
const toolSlug = toolName ? toolName.toLowerCase().replace(/\s+/g, '-') : '';
