<style>
  .privacy-badge {
    background: linear-gradient(135deg, #e8f5e9 0%, #c8e6c9 100%);
    border: 2px solid #4caf50;
    border-radius: 12px;
    padding: 1.5rem;
    margin: 1.5rem 0;
  }

  .badge-header {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .shield-icon {
    width: 48px;
    height: 48px;
    color: #2e7d32;
    flex-shrink: 0;
  }

  .badge-content h3 {
    margin: 0;
    color: #1b5e20;
    font-size: 1.3rem;
    font-weight: 700;
  }

  .badge-subtitle {
    margin: 0.25rem 0 0 0;
    color: #2e7d32;
    font-weight: 600;
    font-size: 0.95rem;
  }

  .privacy-details {
    margin-top: 1.5rem;
    padding-top: 1.5rem;
    border-top: 1px solid #a5d6a7;
  }

  .privacy-guarantee h4 {
    color: #1b5e20;
    margin: 0 0 1rem 0;
    font-size: 1.1rem;
  }

  .privacy-guarantee ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .privacy-guarantee li {
    display: flex;
    align-items: flex-start;
    gap: 0.75rem;
    margin-bottom: 0.75rem;
    color: #2e7d32;
  }

  .privacy-guarantee li svg {
    width: 20px;
    height: 20px;
    color: #4caf50;
    flex-shrink: 0;
    margin-top: 2px;
  }

  .privacy-guarantee li span {
    line-height: 1.5;
  }

  .security-notice {
    margin-top: 1.5rem;
    padding: 1rem;
    background: rgba(255, 255, 255, 0.7);
    border-radius: 8px;
  }

  .security-notice p {
    margin: 0;
    color: #1b5e20;
    line-height: 1.6;
    font-size: 0.9rem;
  }

  @media (max-width: 640px) {
    .badge-header {
      flex-direction: column;
      text-align: center;
    }

    .privacy-guarantee li {
      font-size: 0.9rem;
    }
  }
</style>