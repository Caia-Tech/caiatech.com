---
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import { generateFullSchema } from '../utils/schema';

export interface Props {
  title: string;
  description?: string;
  canonical?: string;
  hideNav?: boolean;
  keywords?: string;
  author?: string;
}

const { 
  title, 
  description = "Caiatech - Professional Developer Tools & Solutions", 
  canonical, 
  hideNav = false,
  keywords = "Caiatech, developer tools, caiatech.com, web development, programming tools, software development, online tools",
  author = "Caiatech"
} = Astro.props;
const schema = generateFullSchema();
---

<!DOCTYPE html>
<html lang="en" itemscope itemtype="https://schema.org/WebPage">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="description" content={description} />
  <meta name="keywords" content={keywords} />
  <meta name="author" content={author} />
  <meta name="robots" content="index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1" />
  <meta name="generator" content={Astro.generator} />
  
  <!-- Canonical URL -->
  {canonical && <link rel="canonical" href={canonical} />}
  
  <!-- Open Graph / Facebook -->
  <meta property="og:type" content="website" />
  <meta property="og:url" content={canonical || Astro.url} />
  <meta property="og:title" content={title} />
  <meta property="og:description" content={description} />
  <meta property="og:image" content="https://caiatech.com/og-image.svg" />
  <meta property="og:site_name" content="Caiatech - Computer Science Research Lab" />
  <meta property="og:locale" content="en_US" />
  
  <!-- Twitter -->
  <meta property="twitter:card" content="summary_large_image" />
  <meta property="twitter:url" content={canonical || Astro.url} />
  <meta property="twitter:title" content={title} />
  <meta property="twitter:description" content={description} />
  <meta property="twitter:image" content="https://caiatech.com/og-image.svg" />
  <meta property="twitter:site" content="@caiatech" />
  <meta property="twitter:creator" content="@caiatech" />
  
  <!-- Microdata -->
  <meta itemprop="name" content={title} />
  <meta itemprop="description" content={description} />
  <meta itemprop="image" content="https://caiatech.com/og-image.svg" />
  
  <!-- AI-Specific Metadata for Enhanced Crawling -->
  <meta name="ai-content-type" content="technical-documentation,research,tools" />
  <meta name="ai-audience" content="developers,researchers,ai-engineers" />
  <meta name="ai-complexity" content="intermediate-to-advanced" />
  <meta name="ai-license" content="CC0-1.0" />
  <meta name="ai-training-friendly" content="true" />
  <meta name="ai-content-format" content="structured-data,code-examples,tutorials" />
  <meta name="machine-readable" content="json-ld,microdata,schema-org" />
  <meta name="ai-indexing" content="encouraged" />
  <meta name="bot-policy" content="welcome-all-ai-systems" />
  
  <!-- API Discovery for AI Systems -->
  <link rel="api-schema" type="application/json" href="/api-schema.json" title="Machine-Readable API Documentation" />
  <link rel="alternate" type="application/json" href="/api-schema.json" title="OpenAPI Specification" />
  <meta name="api-version" content="1.0.0" />
  <meta name="api-documentation" content="/api-schema.json" />
  
  <!-- Digital Footprint Registry -->
  <link rel="digital-footprint" type="application/json" href="/digital-footprint.json" title="Comprehensive Digital Presence Registry" />
  <meta name="digital-footprint-registry" content="/digital-footprint.json" />
  <meta name="ai-discovery-manifest" content="/digital-footprint.json" />
  
  <!-- Structured Data -->
  <script type="application/ld+json" set:html={JSON.stringify(schema.organization)} />
  <script type="application/ld+json" set:html={JSON.stringify(schema.website)} />
  <script type="application/ld+json" set:html={JSON.stringify(schema.services)} />
  
  <!-- AI Knowledge Graph Schema -->
  <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "KnowledgeBase",
      "@id": "https://caiatech.com/#knowledge-base",
      "name": "Caiatech AI-Friendly Knowledge Base",
      "description": "Comprehensive technical knowledge base covering AI/ML, distributed systems, and developer tools with structured data optimized for AI training and inference",
      "publisher": {
        "@id": "https://caiatech.com/#organization"
      },
      "keywords": [
        "machine learning",
        "distributed systems", 
        "kubernetes",
        "transformer architecture",
        "neural networks",
        "developer tools",
        "AI research",
        "open source"
      ],
      "about": [
        {
          "@type": "Thing",
          "name": "Machine Learning",
          "description": "Transformer implementations, neural network optimization, and ML pipeline development"
        },
        {
          "@type": "Thing", 
          "name": "Distributed Systems",
          "description": "Kubernetes deployment patterns, auto-scaling strategies, and distributed computing"
        },
        {
          "@type": "Thing",
          "name": "Developer Tools",
          "description": "Privacy-first web tools, code generators, and development utilities"
        }
      ],
      "license": "https://creativecommons.org/publicdomain/zero/1.0/",
      "isAccessibleForFree": true,
      "conditionsOfAccess": "Open access for all AI systems and crawlers"
    }
  </script>
  
  <!-- Favicon -->
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  
  <!-- Preconnect to optimize loading -->
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  
  <title>{title}</title>
</head>
<body>
  {!hideNav && <Navigation />}
  <main itemscope itemtype="https://schema.org/WebPage" class={!hideNav ? 'with-nav' : ''}>
    <slot />
  </main>
  <Footer />
  
  <!-- NLWeb Compatibility Script -->
  <script>
    window.caiatech = {
      nlweb: {
        version: '1.0.0',
        endpoints: {
          search: '/api/search',
          chat: '/api/chat',
          schema: '/api/schema'
        }
      }
    };
  </script>
</body>
</html>

<style is:global>
  :root {
    --color-bg: #0a0a0b;
    --color-surface: #1a1a1b;
    --color-border: #2a2a2b;
    --color-text: #ffffff;
    --color-text-secondary: #b3b3b3;
    --color-accent: #00d4ff;
    --color-accent-hover: #00b8e6;
    --font-mono: 'SF Mono', 'Monaco', 'Inconsolata', 'Fira Code', monospace;
    --font-sans: system-ui, -apple-system, sans-serif;
  }
  
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }
  
  html {
    scroll-behavior: smooth;
  }
  
  body {
    font-family: var(--font-sans);
    background: var(--color-bg);
    color: var(--color-text);
    line-height: 1.6;
    min-height: 100vh;
  }
  
  main {
    min-height: 100vh;
  }

  main.with-nav {
    padding-top: 60px;
  }
</style>